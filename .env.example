# -----------------------------------------------------------------------------
# Core database settings
# -----------------------------------------------------------------------------
POSTGRES_USER=yaci
POSTGRES_PASSWORD=changeme
POSTGRES_DB=yaci
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Set to true automatically by scripts/configure-env.sh after prompting once
SKIP_ENV_PROMPTS=false

# -----------------------------------------------------------------------------
# PostgREST + Explorer API
# -----------------------------------------------------------------------------
PGRST_DB_SCHEMA=api
POSTGREST_PORT=3000
POSTGREST_URL=http://localhost:3000
POSTGREST_PROXY_URI=http://localhost:3000

# -----------------------------------------------------------------------------
# Chain/indexer settings
# -----------------------------------------------------------------------------
CHAIN_GRPC_ENDPOINT=host.docker.internal:9090
CHAIN_RPC_ENDPOINT=http://host.docker.internal:26657
YACI_IMAGE=ghcr.io/cordtus/yaci:main
YACI_REPO_URL=https://github.com/cordtus/yaci.git
YACI_SOURCE_DIR=/opt/yaci
YACI_BRANCH=main
YACI_BUILD_CMD="make build"
YACI_SKIP_UPDATE=false
YACI_MAX_CONCURRENCY=100
YACI_LOG_LEVEL=info
YACI_INSECURE=-k
YACI_METRICS_PORT=2112

# -----------------------------------------------------------------------------
# Frontend defaults (configure via public/config.json instead)
# -----------------------------------------------------------------------------
EXPLORER_PORT=3001
NODE_ENV=production

# -----------------------------------------------------------------------------
# Chain metadata overrides (optional)
# -----------------------------------------------------------------------------
CHAIN_ID=
CHAIN_NAME=


